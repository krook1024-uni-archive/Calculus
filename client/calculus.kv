<CalculusLoadScreen>:
	BoxLayout:
		Label:
			id: loading
			text: "Loading..."

<CalculusGameScreen>:
	BoxLayout:
		canvas.before:
			Color:
				rgba: 1,1,1,1
			Rectangle:
				pos: self.pos
				size: self.size

		Label:
			id: stats
			color: 0, 0, 0, 1
			text: "Stats:"

		Button:
			text: "Take from stack 1"
			on_release: root.takeFrom(1)
			background_normal: ''
			background_color: 1, 0.6, 1, 0.8
			color: 0, 0, 0, 1
			Image:
				source: "res/stack_100.png"
				center_x: self.parent.center_x
				center_y: self.parent.center_y - 50

		Button:
			text: "Take from stack 2"
			on_release: root.takeFrom(2)
			background_normal: ''
			background_color: 1, 0.6, 1, 0.8
			color: 0, 0, 0, 1
			Image:
				source: "res/stack_100.png"
				center_x: self.parent.center_x
				center_y: self.parent.center_y - 50

		Button:
			text: "Take from stack 3"
			on_release: root.takeFrom(3)
			background_normal: ''
			background_color: 1, 0.6, 1, 0.8
			color: 0, 0, 0, 1
			Image:
				source: "res/stack_100.png"
				center_x: self.parent.center_x
				center_y: self.parent.center_y - 50

		Label:
			id: feedback
			color: 0, 0, 0, 1
			text: ""

<CalculusWinScreen>:
	BoxLayout:
		canvas.before:
			Color:
				rgba: 0, 1, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size

		Label:
			id: stats
			color: 0, 0, 0, 1
			text: "You won the game!"
			font_size: 70

<CalculusLost>:
	BoxLayout:
		canvas.before:
			Color:
				rgba: 1, 0, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size

		Label:
			id: stats
			color: 0, 0, 0, 1
			text: "You lost the game!"
			font_size: 70

